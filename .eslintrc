{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
     "eslint-config-airbnb-typescript",
     "prettier"
    ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "indent": ["warn", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn"],
    "no-unused-vars": ["warn"],
    "import/extensions": [
      "error",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
