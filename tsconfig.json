{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "types": ["vitest/globals", "vitest/importMeta"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
