{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "ESNext",
        "types": ["vitest/globals", "vitest/importMeta"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src", "./build.config.ts", "vitest.config.ts"],
    "exclude": ["node_modules", "build"]
}
