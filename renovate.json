{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "pin": {
        "automerge": true
    },
    "npm": {
        "rangeStrategy": "bump"
    },
    "packageRules": [
        {
            "packagePatterns": ["^@types/"],
            "automerge": true,
            "major": {
                "automerge": false
            }
        }
    ]
}
