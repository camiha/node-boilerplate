{
    "name": "node-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "scripts": {
        "start": "node --experimental-loader ts-node/esm src/index.ts",
        "dev": "nodemon -x \"npm start\" -w src/**/* -e ts,json",
        "test": "vitest run",
        "test:watch": "vitest dev",
        "test:coverage": "vitest run --coverage",
        "build": "npx unbuild",
        "preview": "node build/index.mjs",
        "lint-staged": "lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "npx eslint src --fix",
            "npx prettier --write src"
        ]
    },
    "devDependencies": {
        "@types/node": "18.14.1",
        "c8": "7.12.0",
        "husky": "8.0.3",
        "lint-staged": "13.1.0",
        "nodemon": "^2.0.20",
        "rome": "^11.0.0",
        "ts-node": "10.9.1",
        "typescript": "4.9.4",
        "unbuild": "^1.1.1",
        "vite": "^4.1.4",
        "vitest": "0.28.1"
    }
}
